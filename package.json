{
  "name": "@ria-develop/js-libs",
  "description": "A root module for js-libs",
  "private": true,
  "scripts": {
    "test": "jest",
    "build": "webpack",
    "postbuild": "lerna run postbuild",
    "prebuild": "lerna run prebuild"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build && yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "keywords": [],
  "author": "Micha≈Ç Grzegorzewski <npm@ria-develop.pl> (https://ria-develop.pl)",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@lerna/filter-options": "^3.20.0",
    "@lerna/package": "^3.16.0",
    "@lerna/package-graph": "^3.18.5",
    "@lerna/project": "^3.21.0",
    "@lerna/query-graph": "^3.18.5",
    "@ria-develop/eslint-config": "*",
    "@ria-develop/webpack-config": "*",
    "@types/jest": "^26.0.14",
    "@types/node": "~12",
    "babel-jest": "^26.3.0",
    "eslint": "^7.9.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "less": "^3.12.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "workspaces": [
    "config/*",
    "packages/*"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "@ria-develop(.*)": [
        "<rootDir>/packages$1/src/$1"
      ]
    },
    "modulePathIgnorePatterns": [
      "<rootDir>packages/*/dist",
      "<rootDir>packages/*/types"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts?(x)"
    ],
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "eslintConfig": {
    "extends": [
      "@ria-develop"
    ]
  }
}
